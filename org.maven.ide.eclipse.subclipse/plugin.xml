<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

  <extension point="org.eclipse.ui.popupMenus">
    <objectContribution
        id="org.tigris.subversion.subclipse.ui.RepositoryLocationContributions"
        objectClass="org.tigris.subversion.subclipse.core.ISVNRepositoryLocation"
        adaptable="true">
      <action
          id="org.tigris.subversion.subclipse.ui.checkoutAs"
          label="Checkout as Maven Project..."
          class="org.maven.ide.eclipse.subclipse.CheckoutAsMavenAction"
          menubarPath="checkoutGroup"/>
    </objectContribution>
    <objectContribution
        id="org.tigris.subversion.subclipse.ui.RemoteFolderContributions"
        objectClass="org.tigris.subversion.subclipse.core.ISVNRemoteFolder"
        adaptable="true">
      <action
          id="org.tigris.subversion.subclipse.ui.checkoutAs"
          label="Checkout as Maven Project..."
          class="org.maven.ide.eclipse.subclipse.CheckoutAsMavenAction"
          menubarPath="checkoutGroup"/>
    </objectContribution>             
  </extension>

</plugin>
